<div class="row mb-3">
  <div class="col-3 justify-content-center">
    <h1>Employees</h1>
  </div>
  <div class="col-3">
    <form class="d-flex" method="POST" action="/" novalidate>
      <input class="form-control me-2" type="search" placeholder="email" name="search" value="{{search}}"
        aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Filter</button>
    </form>

  </div>


  <div class="col-3 d-flex justify-content-end">
    <a href="/addEmployee" type="button" class="btn btn-primary align-self-center">+ add user</a>
  </div>
    <div class="col-3 d-flex justify-content-end">
    <a href="/upload" type="button" class="btn btn-secondary align-self-center">upload</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      {{!-- <th scope="col">#</th> --}}
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Birthdate</th>


      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each employees}}
    <tr>
      {{!-- <th scope="row">{{this.id}}</th> --}}
      <td>{{this.name}}</td>
      <td>{{this.surname}}</td>
      <td>{{this.address}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.email}}</td>
      <td>{{this.dob}}</td>
      <td class="text-end">
        {{!-- <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
          View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a> --}}
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
<nav aria-label="Page navigation example">
  <ul class="pagination">
    {{#if pre_page}}
    <li class="page-item"><a class="page-link" href="/?page={{pre_page}}">Previous</a></li>
    {{/if}}
    {{#if next_page}}
    <li class="page-item"><a class="page-link" href="/?page={{next_page}}">Next</a></li>
    {{/if}}
  </ul>
</nav>